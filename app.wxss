/**app.wxss**/
page{
  background-color: white;
  color: #2f2f2f;
}
.border{
  color: #f2f2f2;
}
/* 输入框字颜色 */
.placeholder_color{
  color: #9F9F9F;
}
/* iPhone X */
.isIPX {
  padding-bottom: 30rpx !important;
}
/* 按钮 */
button::after{
  border: none;
}
/* 滚动条 */
::-webkit-scrollbar {
  display: none;
  width: 0;
  height: 0;
  color: transparent;
}
/* 公共色 */
.black{
  color: #2f2f2f;
}
.gray{
  color: #9f9f9f;
}
.red{
  color: #f94039;
}
.blue{
  color: #4a8bf9;
}
.orange{
  color: #EA5413;
}
.white{
  color: white;
}
.btncolor{
  background-color: #EA5413;
}
.btngray{
  background-color: #F2F2F2;
}
.btnblue{
  background-color: #4A8BF9;
}
/* 灰层 */
.grayc{
  width: 100%;
  height: 100%;
  margin: auto;
  background-color: rgba(0,0,0,0.3);
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 9999;
}