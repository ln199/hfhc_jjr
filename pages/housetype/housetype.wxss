/* pages/housetype/housetype.wxss */
.swiper-tab{
  width: 100%;
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
  flex-flow: row;
  justify-content: space-between;
  font-size: 27rpx;
  font-weight: 500;
}
.swiper-tab-item{
  width: 25%; 
  color:#9F9F9F;
}
.active{
  color:#2F2F2F;
  font-weight: bold;
}
/* 列表 */
.tab-scoller{
  width: 95%;
  padding: 20rpx 20rpx 0 20rpx;
}
.housetype-item{
  display: flex;
  justify-content: flex-start;
  margin-bottom: 43rpx;
}
.hxpic{
  width: 267rpx;
  height: 200rpx;
  border-radius:8rpx;
  background: #eee;
}
.hxpic image{
  width: 100%;
  height: 100%;
  display: block;
}
.housetype-you{
  width: 60%;
  margin-left: 19rpx;
}
.hanga{
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.hanga text{
  font-size: 24rpx;
  font-weight: 500rpx;
  border-radius: 8rpx;
  padding: 9rpx 17rpx;
}
.biaoqian{
  height: 40rpx;
  font-size: 24rpx;
  font-weight: 500;
}
.biaoqian text{
  border-radius:8rpx;
  padding: 9rpx 17rpx;
  margin-right: 8rpx;
  border:2rpx solid rgba(159,159,159,1);
}
.surface{
  font-size: 24rpx;
  font-weight: 500;
  margin-bottom: 20rpx;
  margin-top: 10rpx;
}
.average{
  font-size: 24rpx;
  font-weight: 500;
  margin-top: 9rpx;
}
.average text{
  font-size: 32rpx;
  font-weight: bold;
}