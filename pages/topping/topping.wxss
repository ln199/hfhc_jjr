/* pages/topping/topping.wxss */
.swiper-tab{
  width: 100%;
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
  flex-flow: row;
  justify-content: space-between;
  font-size: 27rpx;
  border-bottom: 11rpx solid #F2F2F2;
}
.swiper-tab-item{
  width: 50%; 
  color:#9F9F9F;
  font-weight: 500;
}
.active{
  color:#2F2F2F;
  font-weight: bold;
}
/* 立即置顶 */
.groupa{
  width: 90%;
  height: 120rpx;
  margin: auto;
  background-color: white;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 32rpx;
  font-weight: bold;
  padding: 0 41rpx;
}
.fg{
  width: 100%;
  height: 11rpx;
  margin: auto;
}
.cont{
  padding: 35rpx 32rpx 0 41rpx;
}
.texts{
  font-size: 32rpx;
  font-weight: 500;
  line-height: 60rpx;
}
.num{
  font-size: 40rpx;
  font-weight: bold;
  margin: 0 15rpx;
}
.tips{
  margin-top: 80rpx;
  font-size: 32rpx;
  line-height: 60rpx;
}
.tipswords{
  font-size: 24rpx;
  line-height: 60rpx;
  text-align: left;
  display: flex;
  flex-direction: column;
}
.btnzu{
  margin-top: 150rpx;
}
.btnzu button{
  width:648rpx;
  height:80rpx;
  border-radius:40rpx;
  font-size: 32rpx;
  font-weight: 500;
}
.btnzu button:last-child{
  border:2rpx solid rgba(234,84,19,1);
  margin-top: 21rpx;
  background-color: #ffffff;
}
/* 预约置顶 */
.conts{
  padding: 0 38rpx 0 41rpx;
}
.hanga{
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 115rpx;
  border-bottom: 1px solid #F2F2F2;
  font-size: 32rpx;
  font-weight: 500;
}
.hang-left{
  font-weight: bold;
}
.hang-right{
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.arrow{
  width:12rpx;
  height:19rpx;
  display: block;
  margin-left: 21rpx;
}
.switch_default_address{
  zoom: .9;
}