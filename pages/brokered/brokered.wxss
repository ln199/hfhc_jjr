/* 弹窗 */
.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}
.modal-dialog {
  width: 640rpx;
  height: 320rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 50%;
  z-index: 9999;
  border-radius: 16rpx;
  margin-top: -160rpx;
  margin-left: -320rpx;
  background-color: #fff;
}
.modal-content {
  padding: 60rpx 50rpx;
  font-size: 32rpx;
  font-weight: 500;
  text-align: center;
}
.modal-footer {
  display: flex;
  flex-direction: row;
  height: 109rpx;
  border-top: 1px solid #F2F2F2;
  font-size: 32rpx;
  line-height: 109rpx;
}
.btn-cancel {
  width: 50%;
  text-align: center;
  border-right: 1px solid #F2F2F2;
}
.btn-confirm {
  width: 50%;
  color: #4A8BF9;
  text-align: center;
}