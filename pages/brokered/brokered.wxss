  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin: auto;
  margin-bottom: 40rpx;
  height: 120rpx;
  font-size: 32rpx;
  font-weight: 500;
  width: 90%;
}
.linea-left{
  width: 80%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}
.linea-left text{
  font-weight: bold;
}
.linea-left input{
  padding-left: 45rpx;
  text-align: left;
}
.linea-right{
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
}
.linea-right text{
