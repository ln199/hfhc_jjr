/* pages/customerxq/customerxq.wxss */
.group{
  padding: 40rpx 20rpx 38rpx 20rpx;
}
.topname{
  font-size: 40rpx;
  font-weight: bold;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 29rpx;
}
.topname text{
  font-size: 27rpx;
  font-weight: 500;
}
.message{
  font-size: 27rpx;
  font-weight: 500;
  line-height: 48rpx;
}
.hang{
  display: flex;
  justify-content: flex-start;
}
.hang view{
  display: flex;
  justify-content: flex-start;
}
.hang text{
  width: 130rpx;
  text-align: right;
}
.fg{
  width: 100%;
  height: 8rpx;
  margin: auto;
}
.expressRecord {
  width: 100%;
  margin: 0 auto;
}
.expressRecord-single-close {
  width: 100%;
  height: 143rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  position: relative;
}
.expressRecord-single-noReach-online-top-close {
  display: flex;
  flex-direction: column;
}
.dot-closing {
  width: 28rpx;
  height: 28rpx;
  border-radius: 50%;
  border: 4rpx solid #faddd1;
  background-color:#fff;
  position: relative;
}
.yuaning{
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background-color: #EA5413;
  position: absolute;
  top: 50%;
  left: 50%;
  margin-top: -10rpx;
  margin-left: -10rpx;
  z-index: 1;
}
.dot-close {
  width: 28rpx;
  height: 28rpx;
  border-radius: 50%;
  border: 4rpx solid #f2f2f2;
  background-color: #fff;
  position: relative;
}
.yuan{
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background-color: #f2f2f2;
  position: absolute;
  top: 50%;
  left: 50%;
  margin-top: -10rpx;
  margin-left: -10rpx;
  z-index: 1;
}
.online-bottom {
  width: 4rpx;
  height: 50rpx;
  background-color: #f2f2f2;
  margin-left: 16rpx;
}
.online-bottomimg {
  width: 4rpx;
  height: 50rpx;
  background-color: #faddd1;
  margin-left: 16rpx;
}
.expressRecord-text {
  width: 93%;
  margin-left: 20rpx;
}
.expressRecord-status {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 23rpx;
}
.expressRecord-status-address {
  font-size: 32rpx;
  font-weight: 500;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-left: 18rpx;
}
.bottompart{
  width: 100%;
  height: 155rpx;
  margin: auto;
  padding-top: 12rpx;
  display: flex;
  justify-content: space-around;
}
.gen{
  width: 80rpx;
  height: 80rpx;
  margin-left: 33rpx;
  margin-right: 27rpx;
}
.gen image{
  width: 100%;
  height: 100%;
  display: block;
}
.bottompart button{
  width: 40%;
  height: 80rpx;
  border-radius: 40rpx;
  text-align: center;
  line-height: 80rpx;
  font-size: 32rpx;
  font-weight: 500;
  margin: 0;
  padding: 0;
}
.btna{
  border: 2rpx solid rgba(234,84,19,1);
  background-color: #ffffff;
  margin-right: 21rpx !important;
}