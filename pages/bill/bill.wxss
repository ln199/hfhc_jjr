/* pages/bill/bill.wxss */
.tips{
  line-height: 80rpx;
  font-size: 24rpx;
  font-weight: 500;
  padding-left: 20rpx;
}
.tab-scoller{
  width: 95%;
  padding: 20rpx 20rpx 0 20rpx;
}
.list-item{
  display: flex;
  justify-content: flex-start;
  margin-bottom: 41rpx;
}
.pics{
  width:200rpx;
  height:267rpx;
  border-radius:8rpx;
}
.pics image{
  width: 100%;
  height: 100%;
  display: block;
}
.rightp{
  width: 68%;
  margin-left: 21rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.right-name{
  font-weight: 500;
  font-size: 24rpx;
  margin-bottom: 23rpx;
  line-height: 32rpx;
}
.time{
  font-size: 24rpx;
  font-weight: 500;
}
.btnzu{
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.btnzu button{
  width:140rpx;
  height:53rpx;
  border:2rpx solid rgba(234,84,19,1);
  border-radius:27rpx;
  font-size: 27rpx;
  font-weight: 500;
  padding: 0;
  margin: 0;
  line-height: 51rpx;
}
.btnzu button:first-child{
  background-color: #fff;
  margin-right: 20rpx;
}