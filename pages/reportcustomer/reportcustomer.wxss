/* pages/reportcustomer/reportcustomer.wxss */
/* 搜索 */
.frame{
  width:644rpx;
  height:60rpx;
  background:#ffffff;
  border:2rpx solid rgba(159,159,159,1);
  border-radius:30rpx;
  margin: auto;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
}
.frame_zuo{
  width:27rpx;
  height:29rpx;
  display: block;
  margin: 15rpx 21rpx 16rpx 73rpx;
}
.frame_you{
  width: 75%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 27rpx;
  font-weight: 500;
  text-align: left;
}
/* tab */
.tab-content{
  margin-top: 179rpx;
}
.tab-h{
  height: 80rpx;
  width: 100%; 
  box-sizing: border-box;
  overflow: hidden;
  line-height: 80rpx;
  font-size: 27rpx;
  font-weight: 500;
  white-space: nowrap;
  position: fixed;
  top: 78rpx; 
  left: 0; 
  z-index: 99;
  color: #9F9F9F;
}
.tab-item{
  margin:0 29rpx;
  display: inline-block;
}
.tab-item.active{
  color: #EA5413;
  font-weight: bold;
  position: relative;
}
.tab-item.active:after{ 
  content: "";
  display: block;
  height: 5rpx;
  width: 52rpx;
  background: #EA5413;
  position: absolute; 
  bottom: 0;
  left: 50%;
  border-radius: 16rpx;
  margin-left: -26rpx;
}
/* 列表 */
.tab-scoller{
  width: 100%;
  height: 100%;
  margin: auto;
}
.listitem{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 23rpx;
  padding-bottom: 45rpx;
}
.itemleft{
  line-height: 48rpx;
  margin-left: 19rpx;
}
.hang{
  font-size: 27rpx;
  font-weight: 500;
}
.xq{
  width:140rpx;
  height:53rpx;
  border-radius:27rpx;
  font-size: 27rpx;
  font-weight: 500;
  padding: 0;
  margin: 0;
  line-height: 53rpx;
  margin-right: 23rpx;
}
.fg{
  width: 100%;
  height: 8rpx;
  margin: auto;
}
/* 悬浮按钮 */
.add{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  position: fixed;
  bottom: 55rpx;
  right: 15rpx;
  z-index: 2;
}
.add image{
  width: 100%;
  height: 100%;
  display: block;
  border-radius: 50%;
}