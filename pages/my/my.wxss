/* pages/my/my.wxss */
page{
  background-color: #f1f1f1;
}
.mytop {
  background-color: #fff;
  margin: 20rpx;
  margin-top: 0;
  padding: 0 39rpx 0 43rpx;
  border-radius: 16rpx;
}

.hanga {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 43rpx 0 34rpx 0;
}

.message {
  width: 80%;
  border-bottom: 1px solid #f2f2f2;
  padding-bottom: 15rpx;
}

.name {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.userName{
  font-size: 53rpx;
  font-weight: bold;
  margin-bottom: 17rpx;
}

.name .tag {
  width: 50rpx;
  text-align: center;
  height: 30rpx;
  font-size: 24rpx;
  font-weight: 500;
  padding: 8rpx 34rpx;
  border-radius: 34rpx;
}

.corporation {
  font-size: 27rpx;
  font-weight: 500;
  margin-bottom: 17rpx;
}

.headk {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  margin-right: 46rpx;
  margin-top: 29rpx;
}

.headk image {
  width: 150rpx;
  height: 150rpx;
  display: block;
  border-radius: 50%;
}

.hangb {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 34rpx 0 27rpx 0;
}

.hangb-left {
  width: 90%;
}

.coin {
  width: 66vw;
  font-size: 37rpx;
  font-weight: 400;
  margin-bottom: 24rpx;
}
.coinVal{
  padding-left: 30rpx;
  padding-right: 10rpx;
}

.yucoin {
  font-size: 27rpx;
  font-weight: 500;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.yucoin image {
  width: 25rpx;
  height: 25rpx;
  display: block;
  margin: 0 8rpx;
}

.arrow {
  width: 12rpx;
  height: 19rpx;
}

.arrow image {
  width: 100%;
  height: 100%;
  display: block;
}

.fg {
  width: 100%;
  height: 7rpx;
  margin: auto;
}

/* 功能 */
.type_title {
  padding: 0 0 30rpx 20rpx;
  font-size: 39rpx;
  font-weight: 700;
}

.type_title_s {
  padding: 30rpx 0 30rpx 20rpx;
  font-size: 39rpx;
  font-weight: 700;
}

.type_content {
  width: 80%;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}

.type_content_s {
  width: 70%;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
  /* margin-bottom: 20rpx; */
}

.function {
  height: 100rpx;
  padding: 37rpx 0 40rpx 0;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.itemClass{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.functionItem image{
  width: 80rpx;
  height: 80rpx;
  display: block;
  margin-bottom: 10rpx;
  border-radius: 40rpx;
}
.functionItem text {
  font-size: 24rpx;
  font-weight: bold;
}
/*管理员特有的功能*/
.manageList{
  display: flex;
  border-radius: 20rpx;
  background-color: #ffffff;
  justify-content: space-between;
  margin: 0 20rpx;
  padding: 30rpx;

}
/* 与我相关 */
.aboutMe{
  background-color: #ffffff;
  margin: 20rpx;
  padding: 40rpx 0;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.aboutMeLine{
  display: flex;
  padding: 0 20rpx;
  justify-content: space-around;
}
.aboutMeLine:first-child{
  margin-bottom: 40rpx;
}
.jingjiline{
  margin-bottom: 40rpx;
}

.circle{
  width: 100rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  border-radius: 65rpx;
  border: 1px solid lightgray;
}






/* 列表 */
.list {
  width: 100%;
  height: auto;
  margin: auto;
}

.linef {
  height: 120rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 0 40rpx;
}

.linef text.zhishu {
  font-size: 32rpx;
  font-weight: bold;
}
.linef text.more {
  font-size: 26rpx;
  color: gray;
  font-weight: bold;
}

.linef image {
  width: 12rpx;
  height: 19rpx;
  display: block;
}

