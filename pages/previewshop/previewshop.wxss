/* pages/previewshop/previewshop.wxss */
.top{
  padding: 0 40rpx 44rpx 36rpx;
  
}
.top-top{
  height: 206rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 4rpx;
}
.top-left{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}
.pic{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}
.pic image{
  width: 100%;
  height: 100%;
  display: block;
  border-radius: 50%;
}
.xinxi{
  margin-left: 42rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
}
.xinxi text{
  font-size: 43rpx;
  font-weight: bold;
}
.xinxi text:last-child{
  font-size: 27rpx;
  font-weight: 500;
  margin-top: 20rpx;
}
.btnk{
  width:140rpx;
  height:53rpx;
  border-radius:27rpx;
  font-size: 27rpx;
  font-weight: 500;
  text-align: center;
  line-height: 53rpx;
  border: none;
}
.tip{
  font-size: 27rpx;
  font-weight: 500;
}
.fg{
  width: 100%;
  height: 7rpx;
  margin: auto;
}
/* tab */
.swiper-tab{
  width: 100%;
  text-align: center;
  height: 123rpx;
  line-height: 123rpx;
  display: flex;
  flex-flow: row;
  justify-content: space-between;
}
.swiper-tab-item{
  width: 25%; 
  color: #9F9F9F;
  font-size: 37rpx;
  font-weight: 500;
}
.active{
  color:#2F2F2F;
  font-size: 37rpx;
  font-weight: bold;
}
/* 列表 */
.listitem{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: flex-start;
  margin-bottom: 40rpx;
  padding:  0 20rpx;
}
.pics{
  width:267rpx;
  height:200rpx;
  border-radius:8rpx;
}
.pics image{
  width: 100%;
  height: 100%;
  display: block;
}
.item-right{
  width: 60%;
  height: auto;
  margin-left: 19rpx;
}
.linea{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}
.linea text{
  font-size: 32rpx;
  font-weight: bold;
}
.linea text:last-child{
  font-size: 24rpx;
  font-weight: 500;
  padding: 9rpx 17rpx;
  border-radius: 8rpx;
}
.address{
  font-size: 24rpx;
  font-weight: 500;
  margin-bottom: 10rpx;
}
.biaozu{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  margin-bottom: 16rpx;
  flex-wrap: wrap;
}
.biaozu text{
  font-size: 24rpx;
  font-weight: 500;
  background-color: #fafafa;
  border: 1rpx solid #2F2F2F;
  border-radius: 8rpx;
  padding: 9rpx 17rpx;
  margin-right: 8rpx;
}
.pricek{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.pricek text:first-child{
  font-size: 32rpx;
  font-weight: bold;
}
.pricek text:last-child{
  font-size: 24rpx;
  font-weight: 500;
}


/* 列表 */
.nav-content{
  width: 100%;
  background: #ffffff;
  padding: 21rpx 20rpx 0 20rpx;
  box-sizing: border-box;
  display: flex;
}
.list-item{
  width: 100%;
  display: flex;
  box-sizing: border-box;
  flex-direction: row;
  padding: 20rpx 0;
  background: white;
  align-items: center;
}
.pickk{
  width:267rpx;
  height:200rpx;
  border-radius:8rpx;
  position: relative;
}
.pickk image{
  width: 100%;
  height: 100%;
  display: block;
}
.huic{
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 1;
  width: 100%;
  height: 40rpx;
  border-bottom-left-radius: 8rpx;
  border-bottom-right-radius: 8rpx;
  background-color: rgba(0,0,0,0.35);
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.huic image{
  width: 32rpx;
  height: 32rpx;
  display: block;
  margin-right: 8rpx;
  margin-left: 5rpx;
}
.huic text{
  font-size: 24rpx;
  font-weight: 500;
}
.listitem-right{
  margin-left: 19rpx;
  width: 60%;
}
.name{
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.housexq{
  font-size: 24rpx;
  font-weight: 500;
  margin-bottom: 8rpx;
}
.tipszu{
  margin-bottom: 20rpx;
}
.tipszu text{
  border:2rpx solid rgba(47,47,47,1);
  border-radius:8rpx;
  font-size: 24rpx;
  font-weight: 500;
  padding: 9rpx 17rpx;
  margin-right: 8rpx;
}
.qianzu{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.qianzu text:first-child{
  font-size: 32rpx;
  font-weight: bold;
}
.qianzu text:last-child{
  font-size: 24rpx;
  font-weight: 500;
}

/* 置顶灰条 */
.goTops {
  width: 100%;
  height: 80rpx;
  background: rgba(47, 47, 47, .45);
  margin: auto;
  position: fixed;
  bottom: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 32rpx;
  font-weight: 500;
}

.goTops text {
  font-size: 28rpx;
  margin-left: 41rpx;
}

.tips-right {
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.tips-right button {
  width: 100rpx;
  height: 60rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  font-weight: 500;
  padding: 0;
}

.tips-right image {
  width: 32rpx;
  height: 32rpx;
  display: block;
  margin-left: 42rpx;
  margin-right: 39rpx;
}

.item-right > view, .listitem-right > view{
  margin-bottom: 20rpx;
}