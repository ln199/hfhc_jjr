/* pages/rentalbook/rentalbook.wxss */
.graoupa{
  width: 100%;
  height: auto;
  margin: auto;
}
.title{
  font-size: 40rpx;
  font-weight: bold;
  margin-left: 23rpx;
  padding-top: 41rpx;
  padding-bottom: 36rpx;
}
.line{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  border-bottom: 1rpx solid #F2F2F2;
  height: 119rpx;
  margin: auto 40rpx;
}
.lineleft{
  font-size: 32rpx;
  font-weight: bold;
  width: 160rpx;
  text-align: right;
}
.lineleft text{
  margin-right: 8rpx;
}
.input-text{
  width: 70%;
  font-size: 32rpx;
  font-weight: 500;
  padding-left: 41rpx;
}
radio{
  margin-left: 39rpx;
}
radio .wx-radio-input{
  width: 25rpx;
  height: 25rpx;
  border-radius: 50%;
}
radio .wx-radio-input.wx-radio-input-checked{
  width: 25rpx;
  height: 25rpx;
  border: 1rpx solid #EA5413 !important;
  background: #EA5413 !important;
}
radio .wx-radio-input.wx-radio-input-checked::before{
  border-radius: 50%;
  text-align: center;
  color: #fff;
  font-size: 20rpx;
  transform:translate(-50%, -50%) scale(1);
  -webkit-transform:translate(-50%, -50%) scale(1);
}
.radio text{
  font-size: 32rpx;
  font-weight: 500;
}
.arrow{
  width: 12rpx;
  height: 19rpx;
  display: block;
}
.picker{
  font-size: 32rpx;
  font-weight: 500;
}
.lineright{
  width: 70%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding-left: 41rpx;
  font-size: 32rpx;
  font-weight: 500;
}
.fg{
  width: 100%;
  height: 7rpx;
  margin: auto;
}
.input-texts{
  width: 132rpx;
  text-align: center;
}
.linec{
  border-bottom: 1rpx solid #F2F2F2;
  height: auto;
  margin: auto 40rpx;
  padding-bottom: 27rpx;
}
.tips{
  font-size: 24rpx;
  font-weight: 500;
  margin-left: 33rpx;
  line-height: 32rpx;
}
.linecleft{
  font-size: 32rpx;
  font-weight: bold;
  width: 160rpx;
  text-align: right;
  line-height: 115rpx;
}
/* 图片上传 */
.img-v{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  flex-wrap: wrap;
  padding-top: 20rpx;
  margin-left: 11rpx;
}
.upload-img-btn{
  width: 200rpx;
  height: 200rpx;
  border-radius: 8rpx;
  margin-left: 20rpx;
}
.upload-img-btn image{
  width: 100%;
  height: 100%;
  display: block;
}
.img{
  width: 200rpx;
  height: 200rpx;
  border-radius: 8rpx;
  margin: 0 10rpx 20rpx 10rpx;
  position: relative;
}
.img image{
  width: 100%;
  height: 100%;
  display: block;
}
.delete-btn{
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  top: -14rpx;
  right: -16rpx;
  z-index: 1;
}
.delete-btn image{
  width: 100%;
  height: 100%;
  display: block;
}
/* 上传视频 */
.videok{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  padding-top: 19rpx;
  padding-left: 31rpx;
}
.upvideo{
  width: 200rpx;
  height: 200rpx;
  border-radius: 8rpx;
}
.upvideo image{
  width: 100%;
  height: 100%;
  display: block;
}
.prew_video{
  display: flex;
  align-items: center; /*垂直居中*/
  justify-content: center; /*居中对齐*/
  position: relative;
  background-color: #fff;
  width: 200rpx;
  height: 200rpx;
  margin-right: 20rpx;
}
.prew_video video{
  width: 100%;
  height: 100%;
}
.prew_video[hidden]{
  display: none;
}
.prew_video .play{
  width: 48rpx;
  height: 48rpx;
}
.btnk{
  width: 100%;
  height: 245rpx;
  margin: auto;
  display: flex;
  justify-content: center;
  align-items: center;
}
.btnk button{
  width: 86.36%;
  height: 80rpx;
  border-radius: 80rpx;
  font-size: 32rpx;
  font-weight: 500;
}