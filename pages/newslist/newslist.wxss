/* pages/newslist/newslist.wxss */
.app {
  width: 100%;
  height: 100%;
}

.list {
  width: 100%;
  height: 100%;
  /* padding: 30rpx; */
  clear: right;
}

.list_item {
  width: 100%;
  height: auto;
  border-bottom: 1px solid #E2E2E2;
  margin-bottom: 30rpx;
  padding-bottom: 10rpx;
}

.msg_title {
  width: 100%;
  margin-bottom: 20rpx;
  font-size: 34rpx;
  font-weight: 700;
  display: flex;
  align-items: center;
}

.item_wrap {
  padding: 0 20rpx;
  width: 92%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.msg_content {
  width: 90%;
  font-size: 24rpx;
  text-align: justify;
}

.msg_title .sign {
  display: block;
  width: 20rpx;
  height: 20rpx;
  background: #9D9D9D;
  border-radius: 50%;
  margin: 0 15rpx 0 15rpx;
}

.circle {
  width: 6%;
  height: 40rpx;
  background: red;
  border-radius: 50%;
  color: #fff;
  text-align: center;
  line-height: 40rpx;
}

.read_all {
  width: max-content;
  height: max-content;
  padding: 20rpx 10rpx;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  float: right;
}