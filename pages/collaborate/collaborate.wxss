/* pages/collaborate/collaborate.wxss */
.swiper-tab{
  width: 100%;
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
  flex-flow: row;
  justify-content: space-between;
  font-size: 27rpx;
  font-weight: 500;
  position: fixed;
  top: 0;
}
.swiper-tab-item{
  width: 50%; 
  color:#9F9F9F;
}
.active{
  color:#2F2F2F;
  font-weight: bold;
}
/* 列表 */
.tab-scoller{
  width: 100%;
  margin: auto;
}
.listitem{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding: 40rpx 40rpx 40rpx 32rpx;
  border-bottom: 8rpx solid #f2f2f2;
}
.userk{
  width:120rpx;
  height:120rpx;
  position: relative;
}
.sex{
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  bottom: 0;
  right: 0;
  z-index: 1;
}
.head{
  width:120rpx;
  height:120rpx;
  border-radius:50%;
}
.rightp{
  width: 76%;
  margin-left: 40rpx;
}
.hang{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.name{
  font-size: 32rpx;
  font-weight: bold;
}
.biaozu text{
  border-radius: 8rpx;
  font-size: 24rpx;
  font-weight: 500;
}
.biaozu text:first-child{
  padding: 9rpx 25rpx;
  margin-right: 14rpx;
}
.biaozu text:last-child{
  padding: 9rpx 6.5rpx;
  /* border: 2rpx solid rgba(159,159,159,1); */
  background-color: #FAFAFA;
  background: #fff;
}
.project{
  width: 90%;
  font-size: 32rpx;
  font-weight: 500;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.nums{
  width:40rpx;
  height:40rpx;
  background:rgba(249,64,57,1);
  border-radius:50%;
  font-size: 32rpx;
  font-weight: bold;
  color: white;
  text-align: center;
  line-height: 40rpx;
}