/* pages/completion/completion.wxss */
.title{
  padding-top: 40rpx;
  font-size:40rpx;
  font-weight:bold;
  margin-left: 19rpx;
  margin-bottom: 22rpx;
}
.subtitle{
  font-size: 24rpx;
  font-weight: 500;
  margin-left: 19rpx;
  margin-bottom: 38rpx;
}
.section{
  width: 89%;
  height: 120rpx;
  margin: auto;
  border-bottom: 1rpx solid #F2F2F2;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.section__title{
  font-size: 32rpx;
  font-weight: bold;
}
.picker{
  margin-left: 43rpx;
  font-size: 32rpx;
  font-weight: 500;
}
.arrow{
  width: 12rpx;
  height: 19rpx;
  display: block;
}
.titles{
  font-size: 32rpx;
  font-weight: bold;
  line-height: 119rpx;
  margin-left: 42rpx;
}
.merch_img{
  width: 100%;
  height: auto;
  margin: auto;
  margin-bottom: 78rpx;
}
.indentityCard{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  margin-bottom: 20rpx;
}
.identityCard_front{
  width: 315rpx;
  height: 236rpx;
}
.identityCard_front image{
  width: 100%;
  height: 100%;
  display: block;
}
.identityCard_recite{
  width: 315rpx;
  height: 236rpx;
}
.identityCard_recite image{
  width: 100%;
  height: 100%;
  display: block;
}
.tips{
  width: 100%;
  font-size: 27rpx;
  font-weight: 500;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}
.tips image{
  width: 27rpx;
  height: 27rpx;
  display: block;
  margin-right: 6rpx;
  margin-left: 39rpx;
}
.btnzu{
  width: 100%;
  margin: auto;
  text-align: center;
}
.btnzu button{
  width: 648rpx;
  height: 80rpx;
  border-radius: 80rpx;
  font-size: 32rpx;
  font-weight: 500;
  border: 2rpx solid #EA5413;
  line-height: 78rpx;
  padding: 0;
}
