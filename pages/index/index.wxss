/* 轮播图 */
swiper {
  width: 94.67%;
  margin: auto;
  height: 267rpx;
  border-radius: 8rpx;
}

.swiper-box {
  position: relative;
  width: 100%;
  height: 320rpx;
  padding-top: 27rpx;
}

.dots {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 5rpx;
  display: flex;
  justify-content: center;
}

.dots .dot {
  margin: 0 8rpx;
  width: 14rpx;
  height: 14rpx;
  background: #E0E0E0;
  border-radius: 8rpx;
  transition: all .6s;
}

.dots .dot.active {
  width: 24rpx;
  background: #2F2F2F;
}

swiper image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

