/* pages/gotop/gotop.wxss */
.sflist{
  padding: 40rpx 20rpx;
}
.list-item{
  width: 100%;
  display: flex;
  box-sizing: border-box;
  flex-direction: row;
  background: white;
  align-items: center;
}
.pickk{
  width:267rpx;
  height:200rpx;
  border-radius:8rpx;
  position: relative;
}
.pickk image{
  width: 100%;
  height: 100%;
  display: block;
}
.huic{
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 1;
  width: 100%;
  height: 40rpx;
  border-bottom-left-radius: 8rpx;
  border-bottom-right-radius: 8rpx;
  background-color: rgba(0,0,0,0.35);
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.huic image{
  width: 32rpx;
  height: 32rpx;
  display: block;
  margin-right: 8rpx;
  margin-left: 5rpx;
}
.huic text{
  font-size: 24rpx;
  font-weight: 500;
}
.listitem-right{
  margin-left: 19rpx;
  width: 60%;
}
.names{
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.housexq{
  font-size: 24rpx;
  font-weight: 500;
  margin-bottom: 8rpx;
}
.tipszu{
  margin-bottom: 20rpx;
}
.tipszu text{
  border:2rpx solid rgba(47,47,47,1);
  border-radius:8rpx;
  font-size: 24rpx;
  font-weight: 500;
  padding: 9rpx 17rpx;
  margin-right: 8rpx;
}
.qianzu{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.qianzu text:first-child{
  font-size: 32rpx;
  font-weight: bold;
}
.qianzu text:last-child{
  font-size: 24rpx;
  font-weight: 500;
}
.fg{
  width: 100%;
  height: 8rpx;
  margin: auto;
}
.tips{
  font-size: 32rpx;
  font-weight: 500;
  line-height: 60rpx;
  text-align: left;
  padding: 40rpx;
}
.tips text{
  font-size: 40rpx;
  font-weight: bold;
  margin: 0 10rpx;
}
.beizhu{
  font-size: 27rpx;
  font-weight: 500;
  padding: 0 40rpx;
}
.btnzu{
  width: 100%;
  text-align: center;
  position: fixed;
  bottom: 0;
}
.btnzu button{
  width:648rpx;
  height:80rpx;
  border-radius:40rpx;
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 21rpx;
}
.btnzu button:last-child{
  border:2rpx solid rgba(234,84,19,1);
  background-color: #ffffff;
  margin-bottom: 72rpx;
}